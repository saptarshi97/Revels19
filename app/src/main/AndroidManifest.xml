<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.mitrev.mitrev19">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="in.mitrev.mitrev19.application.Revels19"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="in.mitrev.mitrev19.activities.MainActivity"
            android:configChanges="smallestScreenSize|screenLayout|orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name="in.mitrev.mitrev19.activities.ProfileActivity"
            android:configChanges="smallestScreenSize|screenLayout|orientation|screenSize"
            android:parentActivityName="in.mitrev.mitrev19.activities.MainActivity"
            android:screenOrientation="portrait" />
        <receiver
            android:name="in.mitrev.mitrev19.receivers.NotificationReceiver"
            android:enabled="true"
            android:exported="true" />
        <activity
            android:name="in.mitrev.mitrev19.activities.FavouritesActivity"
            android:configChanges="smallestScreenSize|screenLayout|orientation|screenSize"
            android:launchMode="singleTop"
            android:parentActivityName="in.mitrev.mitrev19.activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="in.mitrev.mitrev19.activities.AboutUsActivity"
            android:configChanges="smallestScreenSize|screenLayout|orientation|screenSize"
            android:parentActivityName="in.mitrev.mitrev19.activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="in.mitrev.mitrev19.activities.DevelopersActivity"
            android:configChanges="smallestScreenSize|screenLayout|orientation|screenSize"
            android:parentActivityName="in.mitrev.mitrev19.activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="in.mitrev.mitrev19.activities.LoginActivity"
            android:configChanges="smallestScreenSize|screenLayout|orientation|screenSize"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="in.mitrev.mitrev19.activities.CategoryActivity"
            android:configChanges="smallestScreenSize|screenLayout|orientation|screenSize"
            android:parentActivityName="in.mitrev.mitrev19.activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="in.mitrev.mitrev19.activities.SplashActivity"
            android:configChanges="smallestScreenSize|screenLayout|orientation|screenSize" />

        <activity android:name="in.mitrev.mitrev19.activities.AddTeammateActivity"></activity>
    </application>

</manifest>